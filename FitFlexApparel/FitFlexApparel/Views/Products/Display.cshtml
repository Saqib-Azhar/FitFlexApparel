@model FitFlexApparel.Models.Product
    @{ 

        var ReviewsList = ViewBag.Reviews as IEnumerable<FitFlexApparel.Models.ProductReview>;
        var ProductPricesList = ViewBag.ProductPrices as IEnumerable<FitFlexApparel.Models.ProductPrice>;
        
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!-- /NAVIGATION -->
    <!-- BREADCRUMB -->
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="#">@Model.SubCategory.Category.Category_Name</a></li>
                <li><a href="#">@Model.SubCategory.Subcategory_Name</a></li>
                <li class="active">@Model.Product_Name</li>
            </ul>
        </div>
    </div>
    <!-- /BREADCRUMB -->
    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!--  Product Details -->
                <div class="product product-details clearfix">
                    <div class="col-md-6">
                        <div id="product-main-view">
                            @if (Model.Product_Image1 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image1" alt="">
                                </div>
                            }
                            @if (Model.Product_Image2 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image2" alt="">
                                </div>
                            }
                            @if (Model.Product_Image3 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image3" alt="">
                                </div>
                            }
                            @if (Model.Product_Image4 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image4" alt="">
                                </div>
                            }
                            @if (Model.Product_Image5 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image5" alt="">
                                </div>
                            }
                        </div>
                        <div id="product-view">
                            @if (Model.Product_Image1 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image1" alt="">
                                </div>
                            }
                            @if (Model.Product_Image2 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image2" alt="">
                                </div>
                            }
                            @if (Model.Product_Image3 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image3" alt="">
                                </div>
                            }
                            @if (Model.Product_Image4 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image4" alt="">
                                </div>
                            }
                            @if (Model.Product_Image5 != null)
                            {
                                <div class="product-view">
                                    <img src="/UploadedImages/@Model.Product_Image5" alt="">
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product-body">
                            @*<div class="product-label">
                                <span>New</span>
                                <span class="sale">-20%</span>
                            </div>*@
                            <h2 class="product-name">@Model.Product_Name</h2>
                            <table class="table table-responsive table-hover" style="border:double" border="1">
                                <tr>
                                    @foreach (var item in ProductPricesList.OrderBy(s=>s.Min))
                                    {
                                        if (item.Max != null)
                                        {
                                            <td><div>@item.Min - @item.Max Piece/Pieces<br /><b>US $@item.Price</b></div></td>
                                        }
                                        else
                                        {
                                            <td><div>@item.Min < Piece/Pieces<br /><b>US $@item.Price</b></div></td>
                                        }
                                    }
                                </tr>
                            </table>
                            @*<h3 class="product-price">$@Model.Original_Price <del class="product-old-price">$45.00</del></h3>*@
                            <div>
                                <div class="product-rating">
                                    @for (int star = 0; star < Model.Average_Rating; star = star + 1)
                                    {
                                        <i class="fa fa-star"></i>
                                    } 
                                     @for (double? star = (Model.Average_Rating == null) ? 0 : Model.Average_Rating; star < 5; star++)
                                     {
                                        <i class="fa fa-star-o empty"></i>
                                     }
                                </div>
                                <a data-toggle="tab" href="#tab3">@Model.Total_Ratings Review(s) / Add Review</a>
                            </div>
                            @if (Model.Product_Stock > 0)
                            {
                                <p><strong>Availability:</strong> In Stock <strong style="padding-left:30px;">Brand:</strong> @Model.Brand.Brand_Name</p>
                            }
                            else
                            {
                                <p><strong>Availability:</strong> Out of Stock <strong style="padding-left:30px;">Brand:</strong> @Model.Brand.Brand_Name</p>
                            }
                            <hr />
                            
                            @Html.Raw(Model.Product_Description)

                            <div class="product-options">
                                <ul class="size-option">
                                    <li><span class="text-uppercase">Size:</span></li>
                                    @if (Model.Sizes != null)
                                    {
                                        foreach (var item in Model.Sizes.Split(','))
                                        {
                                            <li class="sizeSelection" value="@item"><a style="cursor:pointer;" onclick="SelectThis(this, 'size')">@item</a></li>
                                        }
                                    }
                                </ul>
                                <ul class="color-option">
                                    <li><span class="text-uppercase">Color:</span></li>
                                    @if (Model.Colors != null)
                                    { foreach (var item in Model.Colors.Split(','))
                                        {
                                        <li class="colorSelection" value="@item"><a onclick="SelectThis(this, 'color')" alt="@item" style="border:solid;cursor:pointer;background-color:#@item;"></a></li>
                                        }
                                    }
                                </ul>
                            </div>
                            <script>
                                function SelectThis(obj,attr)
                                {
                                    if(attr == 'color')
                                        $(".colorSelection").removeClass("active");
                                    else if(attr == 'size')
                                        $(".sizeSelection").removeClass("active");
                                $(obj).parent().addClass('active')
                                }
                                function AddToCart()
                                {
                                    debugger;
                                    var selectedSize = $(".sizeSelection.active").children().text();
                                    var selectedColor = $(".colorSelection.active").children().attr('alt');
                                    var selectedQuantity = $("#SelectedQuantity").val();
                                    var productId = '@Model.Id';
                                    if(selectedColor == null || selectedSize == null || selectedQuantity == null)
                                    {
                                        alert("Please select valid color size and quantity!");
                                        return 0;

                                    }
                                    $.ajax({
                                        url: "/Products/AddToCart",
                                        type: 'POST',
                                        data: { productId: productId, selectedQuantity: selectedQuantity, selectedColor:selectedColor, selectedSize:selectedSize },
                                        success: function (result) {
                                            if (result == "Success")
                                            {
                                                alert("Successfully added in Cart!");
                                                window.location.reload();
                                            }
                                            else if(result == "LoginError")
                                            {
                                                alert("Please create an account or login to your account to add this product!");
                                                window.location = "/Account/Login?url="+window.location.href;
                                            }
                                            else 
                                            {
                                                alert("Something went wrong! (please make sure you are connected with Internet & your browser is compatible)")
                                            }
                                        },
                                        error: function () {
                                            alert("Something went wrong! (please make sure you are connected with Internet & your browser is compatible)");
                                        }
                                    });
                                }
                            </script>
                            @if (Model.Product_Stock > 0 && Model.IsDeleted != true)
                            {
                                <div class="product-btns">
                                    <div class="qty-input">
                                        <span class="text-uppercase">QTY: </span>
                                        <input class="input" type="number" value="1" min="1" id="SelectedQuantity">
                                    </div>
                                    <button class="primary-btn add-to-cart" onclick="AddToCart()"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                    <div class="pull-right">
                                        <button class="main-btn icon-btn" onclick="AddToWishlist(@Model.Id)"><i class="fa fa-heart"></i></button>
                                        @*<button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>*@
                                        <button class="main-btn icon-btn"><i class="fa fa-share-alt"></i></button>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="product-btns">
                                    <div class="qty-input">
                                        <span class="text-uppercase">QTY: </span>
                                        <input class="input" type="number" disabled value="0" min="0" id="SelectedQuantity">
                                    </div>
                                    <button class="primary-btn disabled" disabled title="Out of Stock"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                    <div class="pull-right">
                                        <button class="main-btn icon-btn" onclick="AddToWishlist(@Model.Id)"><i class="fa fa-heart"></i></button>
                                        @*<button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>*@
                                        <button class="main-btn icon-btn"><i class="fa fa-share-alt"></i></button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="product-tab">
                            <ul class="tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">Overview</a></li>
                                <li><a data-toggle="tab" href="#tab2">Company Profiles</a></li>
                                <li><a data-toggle="tab" href="#tab3">Reviews (@Model.Total_Ratings)</a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab1" class="tab-pane fade in active">
                                    @Html.Raw(Model.Product_Overview)
                                </div>
                                <div id="tab2" class="tab-pane fade in">
                                    @Html.Raw(Model.Company_Profile)
                                </div>
                                <div id="tab3" class="tab-pane fade in">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="product-reviews">
                                                
                                                @foreach (var item in ReviewsList)
                                                {
                                                    <div class="single-review">
                                                        <div class="review-heading">
                                                            <div><a href="#"><i class="fa fa-user-o"></i> @item.AspNetUser.DisplayName</a></div>
                                                            <div><a href="#"><i class="fa fa-clock-o"></i> @item.Created_At</a></div>
                                                            <div class="review-rating pull-right">
                                                                @for (int star = 0; star < item.Rating; star = star + 1)
                                                                {
                                                                    <i class="fa fa-star"></i>
                                                                }
                                                                @for (double? star = (item.Rating == null) ? 0 : item.Rating; star < 5; star++)
                                                                {
                                                                    <i class="fa fa-star-o empty"></i>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="review-body">
                                                            <p>
                                                                @item.Review
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                                

                                                

                                                @*<ul class="reviews-pages">
                                                    <li class="active">1</li>
                                                    <li><a href="#">2</a></li>
                                                    <li><a href="#">3</a></li>
                                                    <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
                                                </ul>*@
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h4 class="text-uppercase">Write Your Review</h4>
                                            <p>Your email address will not be published.</p>
                                            <form class="review-form" action="/Products/NewReview" method="post">
                                                <div class="form-group">
                                                    <input class="input" type="text" name="Name" placeholder="Your Name" />
                                                </div>
                                                <div class="form-group">
                                                    <input class="input" type="email" name="Email" placeholder="Email Address" />
                                                </div>
                                                <div class="form-group">
                                                    <textarea class="input" name="Review" placeholder="Your review"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-rating">
                                                        <strong class="text-uppercase">Your Rating: </strong>
                                                        <div class="stars">
                                                            <input type="radio" id="star5" name="rating" value="5" /><label for="star5"></label>
                                                            <input type="radio" id="star4" name="rating" value="4" /><label for="star4"></label>
                                                            <input type="radio" id="star3" name="rating" value="3" /><label for="star3"></label>
                                                            <input type="radio" id="star2" name="rating" value="2" /><label for="star2"></label>
                                                            <input type="radio" id="star1" name="rating" value="1" /><label for="star1"></label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="text" value="@Model.Id" name="ProductId" hidden />
                                                <button class="primary-btn">Submit</button>
                                            </form>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /Product Details -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->