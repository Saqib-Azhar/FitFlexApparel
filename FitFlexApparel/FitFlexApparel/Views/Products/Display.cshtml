                            <div class="product-options">
                                <ul class="size-option">
                                    <li><span class="text-uppercase">Size:</span></li>
                                    @foreach (var item in Model.Sizes.Split(','))
                                    {
                                        <li class="sizeSelection"><a style="cursor:pointer;" onclick="SelectThis(this, 'size')">@item</a></li>
                                    }
                                </ul>
                                <ul class="color-option">
                                    <li><span class="text-uppercase">Color:</span></li>
                                    @foreach (var item in Model.Colors.Split(','))
                                    {
                                        <li class="colorSelection"><a onclick="SelectThis(this, 'color')" style="border:solid;cursor:pointer;background-color:#@item;"></a></li>
                                    }
                                </ul>
                            </div>
                            <script>
                                function SelectThis(obj,attr)
                                {
                                    debugger
                                    if(attr == 'color')
                                        $(".colorSelection").removeClass("active");
                                    else if(attr == 'size')
                                        $(".sizeSelection").removeClass("active");
                                $(obj).parent().addClass('active')
                                }
                            </script>
