@model FitFlexApparel.Models.Category

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="row">
        @Html.HiddenFor(model => model.Id)

		<div class="col-md-6">
        <div class="form-group">
			@Html.Label("","Category Name", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
            </div>
        </div>
		</div>
		<div class="col-md-6">
        <div class="form-group">
			@Html.Label("","Category Description", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Category_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Category_Description, "", new { @class = "text-danger" })
            </div>
        </div>
		</div>
		<div class="col-md-6">
        <div class="form-group">
			@Html.Label("","Category Image", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Category_Image, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                @Html.ValidationMessageFor(model => model.Category_Image, "", new { @class = "text-danger" })
            </div>
        </div>
		</div>
		</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
				@Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

