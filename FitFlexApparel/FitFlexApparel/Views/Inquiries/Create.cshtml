                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Image_File_1, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                                    @Html.ValidationMessageFor(model => model.Image_File_1, "", new { @class = "text-danger" })
                                </div>
