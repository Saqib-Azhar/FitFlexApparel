@model IEnumerable<FitFlexApparel.Models.ContributionRequest>

@{
    ViewBag.Title = "Index";
}

<h2>Contribution Requests</h2>

<table class="table table-striped" style="text-align:center; border:double; display:block; overflow:auto;">
    <tr>
        <th>
            @Html.DisplayName("Submitted At")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Contact No")
        </th>
        <th>
            @Html.DisplayName("Country")
        </th>
        <th>
            @Html.DisplayName("Request Type")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (item.Is_Read == false)
        {
            <td>
                <a href="/ContributionRequests/Details/@item.Id" style="color:blue;" ><b>@Html.DisplayFor(modelItem => item.Requested_At)</b></a>
            </td>                                                
            <td>                                                 
                <a href="/ContributionRequests/Details/@item.Id" style="color:blue;" ><b>@Html.DisplayFor(modelItem => item.Name)</b></a>
            </td>                                                
            <td>                                                 
                <a href="/ContributionRequests/Details/@item.Id" style="color:blue;" ><b>@Html.DisplayFor(modelItem => item.Email)</b></a>
            </td>                                                
            <td>                                                 
                <a href="/ContributionRequests/Details/@item.Id" style="color:blue;" ><b>@Html.DisplayFor(modelItem => item.Contact_No)</b></a>
            </td>                                                
            <td>                                                 
                <a href="/ContributionRequests/Details/@item.Id" style="color:blue;" ><b>@Html.DisplayFor(modelItem => item.Country)</b></a>
            </td>
        }
        else
        {
            <td>
                <a style="color:blue;" href="/ContributionRequests/Details/@item.Id">@Html.DisplayFor(modelItem => item.Requested_At)</a>
            </td>
            <td>
                <a style="color:blue;" href="/ContributionRequests/Details/@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a style="color:blue;" href="/ContributionRequests/Details/@item.Id">@Html.DisplayFor(modelItem => item.Email)</a>
            </td>
            <td>
                <a style="color:blue;" href="/ContributionRequests/Details/@item.Id">@Html.DisplayFor(modelItem => item.Contact_No)</a>
            </td>
            <td>
                <a style="color:blue;" href="/ContributionRequests/Details/@item.Id">@Html.DisplayFor(modelItem => item.Country)</a>
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.ContributionRequestsType.Request_Type)
        </td>
        <td>
            @if(item.Is_Read == false)
            {
                <p style="color:orangered">Unread</p>
            }
            else
            {
                <p style="color:lawngreen">Read</p>
            }
        </td>
        <td style="">
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-success" }) 
            @Html.ActionLink("Mark Unread", "MarkUnread", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-primary" }) 
        </td>
    </tr>
}

</table>
