@model FitFlexApparel.Models.Color

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Model.Color_Code = string.Concat("#", Model.Color_Code);
}

@using (Html.BeginForm("Edit", "Colors", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Color</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="row">
        @Html.HiddenFor(model => model.Id)

		<div class="col-md-6">
        <div class="form-group">
			@Html.Label("","Color Name", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Color_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Color_Name, "", new { @class = "text-danger" })
            </div>
        </div>
		</div>
		<div class="col-md-6">
        <div class="form-group">
			@Html.Label("","Color Code", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Color_Code, new { htmlAttributes = new { @class = "form-control", @type="color", @style="height: 50px; width: 75px;" } })
                @Html.ValidationMessageFor(model => model.Color_Code, "", new { @class = "text-danger" })
            </div>
        </div>
		</div>
		</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
				@Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

