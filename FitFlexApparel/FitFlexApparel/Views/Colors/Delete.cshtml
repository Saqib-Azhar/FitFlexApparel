@model FitFlexApparel.Models.Color

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Are you sure you want to delete this Color?</h3>
<div>
    <h4></h4>
    <hr />
    <div class="row">
		<div class="col-md-6" style="padding:15px;">
			<div class="col-md-12">
				<b>
					@Html.DisplayNameFor(model => model.Color_Name)
				</b>
			</div>

			<div class="col-md-12">
				@Html.DisplayFor(model => model.Color_Name)
			</div>
		</div>

		<div class="col-md-6" style="padding:15px;">
			<div class="col-md-12">
				<b>
					@Html.DisplayNameFor(model => model.Color_Code)
				</b>
			</div>

			<div class="col-md-12">
                <span style="border:solid 1px;background-color:#@Model.Color_Code;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
			</div>
		</div>

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin:15px!important">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
        </div>
    }
</div>
